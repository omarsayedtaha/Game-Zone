@model IReadOnlyList<GameViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="mt-4">
    <a class="btn btn-secondary btn-lg" asp-action="Create"><i class="bi bi-plus-circle-dotted"></i> Add Game</a>
</div>
@if(Model.Count()>0)
{   <div class="mt-5">
    <table class="table table-bordered border-primary ">
     <tbody>
       @foreach(var items in Model)
        {
            <tr class="border-1 border-success">
                <td>
                    <div class="d-flex ">
                        <div class="pe-4">
                            <img class="image-fluid-rounded" src="~/files/Cover/@items.Poster" alt="@items.Name" style="max-width:90px" />
                        </div>
                        <div class="d-flex flex-column justify-content-center">
                        <h5 class="text-light">@items.Name</h5>
                        <h6>@items.Category.Name</h6>
     
                        </div>
                    </div>
                </td>
                <td class="align-middle ">
                    <div class="d-flex justify-content-end ">
                        <a class="btn btn-info rounded rounded-2" asp-action="Edit" asp-route-id="@items.Id">
                            <i class="bi bi-pencil-fill"></i>
                        </a>
                                <a href="javascript:;" class="btn btn-danger rounded rounded-2  js-delete" data-id=@items.Id>
                            <i class="bi bi-trash3 rounded rounded-2"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }

     </tbody>

    </table>
    </div>
}
else
{
    <div class="alert-danger mt-5">
        <h4 class="alert-heading">No games!</h4>
        <p class="mb-0">No games were added yet.</p>
    </div>
}
@section scripts
{
    <script src="~/js/game-delete.js" asp-append-version="true"></script>

}

